# Project Info
PROJECT_NAME="Admin RBAC Backend"
API_V1_STR="/api/v1"

# Environment："local", "staging", "production"
ENVIRONMENT="local"

# Security
# 可使用命令生成: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="changethis"
JWT_ALGORITHM= "HS256"
JWT_ISSUER="admin-rbac-backend"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Auth Cookie/CSRF
AUTH_REFRESH_COOKIE_NAME="refresh_token"
AUTH_CSRF_COOKIE_NAME="csrf_token"
AUTH_CSRF_HEADER_NAME="X-CSRF-Token"
AUTH_COOKIE_DOMAIN=None
AUTH_COOKIE_SECURE=False  # 生产环境应使用 https 并设为 True
AUTH_COOKIE_SAMESITE="lax"

# 密码强度验证
# 开启后需要大小写+数字+特殊字符且>=8位
# 关闭后仅限长度>=6位
PASSWORD_COMPLEXITY_ENABLED=true

# Database
POSTGRES_SERVER="localhost"
POSTGRES_PORT=5432
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"
POSTGRES_DB="database_name"
# 数据库连接池
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Superuser
FIRST_SUPERUSER="admin"
FIRST_SUPERUSER_PASSWORD="password"
FIRST_SUPERUSER_EMAIL="admin@example.com"
FIRST_SUPERUSER_PHONE="13800138000"
FIRST_SUPERUSER_NICKNAME="Administrator"
FIRST_SUPERUSER_GENDER="男"


# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# NCM 凭据加密（双密钥体系，AES-256 需要 32 字节密钥）
# 可使用 32 字符 UTF-8 字符串或 64 字符 Hex 编码
# 生成方法: python -c "import os; print(os.urandom(32).hex())"
# 静态密码加密密钥（32字节）
NCM_CREDENTIAL_KEY="changethis_credential_key_32b!"
# OTP 种子加密密钥（独立密钥）
NCM_OTP_SEED_KEY="changethis_otp_seed_key_32byte!"

# Flower 监控配置
# Flower Web UI 端口
FLOWER_PORT=5555
# HTTP Basic Auth, 格式: "user:password"
FLOWER_BASIC_AUTH=""

# Celery Beat 定时任务配置
# 每日全量备份时间（小时，0-23）
CELERY_BEAT_BACKUP_HOUR=2
# 每日全量备份时间（分钟，0-59）
CELERY_BEAT_BACKUP_MINUTE=0
# 增量检查间隔（cron 格式）
CELERY_BEAT_INCREMENTAL_HOURS="*/4"

# ARP/MAC 采集配置
# ARP/MAC 缓存过期时间（秒），默认 1 小时
COLLECT_CACHE_TTL=3600
# 定时采集分钟（每小时的第几分钟执行）
CELERY_BEAT_COLLECT_MINUTE=30

# 网络扫描配置
# Nmap 默认扫描端口
SCAN_DEFAULT_PORTS="22,161"
# 扫描超时时间（秒）
SCAN_TIMEOUT=300
# Masscan 扫描速率（packets/sec）
SCAN_RATE=1000
# 定时扫描时间
CELERY_BEAT_SCAN_HOUR=3
CELERY_BEAT_SCAN_MINUTE=0

# 拓扑配置
# 拓扑缓存过期时间（秒），默认 30 分钟
TOPOLOGY_CACHE_TTL=1800
# 定时拓扑刷新小时
CELERY_BEAT_TOPOLOGY_HOUR=4

# 告警配置（Phase 3）
# 离线告警阈值（天）
ALERT_OFFLINE_DAYS_THRESHOLD=3

# Webhook 通知（默认不启用）
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=""

# 邮件通知（仅提供配置项，默认不启用）
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_HOST=""
ALERT_EMAIL_PORT=25
ALERT_EMAIL_USER=""
ALERT_EMAIL_PASSWORD=""
ALERT_EMAIL_FROM=""
ALERT_EMAIL_TO=""

